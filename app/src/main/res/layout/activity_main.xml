<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/mode_spinner_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mode_spinner_caption" />
    <Spinner
        android:id="@+id/mode_spinner"
        android:layout_toRightOf="@+id/mode_spinner_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:id="@+id/brightness_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="75dp"
        android:paddingBottom="10dp"
        android:text="Brightness"
        android:layout_below="@+id/mode_spinner"
        android:gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/brightness_seekbar"
        android:layout_below="@+id/brightness_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:max="255"/>

    <TextView
        android:id="@+id/colors_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Colors"
        android:layout_below="@+id/brightness_seekbar"
        android:gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/color_1_seekbar"
        android:layout_below="@+id/colors_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:max="255"/>

    <SeekBar
        android:id="@+id/color_2_seekbar"
        android:layout_below="@+id/color_1_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:paddingBottom="10dp"
        android:max="255"/>

    <SeekBar
        android:id="@+id/color_3_seekbar"
        android:layout_below="@+id/color_2_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:paddingBottom="10dp"
        android:max="255"/>

    <TextView
        android:id="@+id/message_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="Chest Message"
        android:layout_below="@+id/color_3_seekbar"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/chest_message"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:hint="Enter chest message..."
        android:layout_below="@+id/message_caption"/>

    <Button
        android:id="@+id/chest_message_button"
        android:text="Display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/message_caption"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/chest_message"/>


    <TextView
        android:id="@+id/text_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
